{
  "name": "hostel-masr",
  "version": "1.0.0",
  "description": "HOSTEL MASR - نظام متكامل لإدارة الحجوزات",
  "main": "electron/main.js",
  "scripts": {
    "build": "cd frontend && npm run build",
    "build:exe": "npm run build && electron-builder --win --x64",
    "dev": "cd frontend && npm run dev",
    "electron:dev": "electron .",
    "postinstall": "cd frontend && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "electron": "^25.8.1",
    "electron-builder": "^24.6.3",
    "electron-icon-builder": "^2.0.1",
    "jimp": "^0.16.2",
    "png-to-ico": "^3.0.1",
    "puppeteer": "^24.31.0",
    "rcedit": "^5.0.2",
    "to-ico": "^1.1.5"
  },
  "build": {
    "appId": "com.hostel.masr",
    "productName": "HOSTEL MASR",
    "directories": {
      "output": "build-output",
      "buildResources": "build"
    },
    "compression": "store",
    "asar": true,
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "extraResources": [
      {
        "from": "frontend/dist",
        "to": "frontend-dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ]
  }
}
